<h1>Life Events</h1>

<table class="center">
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @life_events.each do |life_event| %>
      <tr>
        <td><%= life_event.title %></td>
        <td><%= life_event.year %></td>
        <td><%= life_event.description %></td>
        <td><%= link_to 'Show', life_event %></td>
        <td><%= link_to 'Edit', edit_life_event_path(life_event) %></td>
        <td><%= link_to 'Destroy', life_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="footer">
    <%= link_to 'New Life Event', new_life_event_path %> | <%= link_to 'Schools', schools_path %>
  | <%= link_to 'People', people_path %> | <%= link_to 'Home', welcome_index_path %>
</div>
<br>
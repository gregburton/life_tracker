<div class="row">
    <div class="large-4 columns">
      <label>Person ID<br>
      <%= f.collection_select :person_id, Person.all, :id, :name, :include_blank => true %>
      </label>
    </div>
</div>
<div class="row">
  <div class="large-6 columns">
    <label>School Name<br>
      <%= f.text_field :name %>
    </label>
  </div>
</div>
<div class="row">
      <div class="large-2 columns">
        <label>Beginning Year<br>
          <%= f.number_field :beginning_year %>
        </label>
      </div>
      <div clas="row">
      <div class="large-2 columns">
        <label>Ending Year<br>
          <%= f.number_field :ending_year %>
        </label>
      </div>
    </div>
</div>
<div class="row">
  <div class="large-4 columns">
    <label>City<br>
      <%= f.text_field :city %>
    </label>
  </div>
</div>
<div class="row">
  <div class="large-2 columns">
    <label>State<br>
      <%= f.text_field :state, :placeholder => "e.g. NC" %>
    </label>
  </div>
</div>
<div class="row">
  <div class="large-4 columns">
    <label>Country<br>
      <%= f.text_field :country %>
    </label>
  </div>
</div>


<div class="row">
  <div class="actions">
    <%= f.submit %>
  </div>
</div>



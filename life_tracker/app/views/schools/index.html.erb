<h1>Schools</h1>

<table class="center">
  <thead>
    <tr>
      <th>Person</th>
      <th>Name</th>
      <th>Beginning year</th>
      <th>Ending year</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td>
          <% if school.person %>
              <%= link_to school.person, school.person %>
          <% end %>
        </td>
        <td><%= school.name %></td>
        <td><%= school.beginning_year %></td>
        <td><%= school.ending_year %></td>
        <td><%= school.city %></td>
        <td><%= school.state %></td>
        <td><%= school.country %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="footer">
    <%= link_to 'New School', new_school_path %> | <%= link_to 'Life Events', life_events_path %>
    | <%= link_to 'People', people_path %> | <%= link_to 'Home', welcome_index_path %>
</div>
<br>